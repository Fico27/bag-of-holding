<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dashboard</title>
  </head>
  <body>
    <header>
      <h1>Drive of Holding</h1>

      <nav>
        <ul>
          <li><a href="/">Home</a></li>
          <!-- <li><a href="/logout">Log out</a></li> -->
          <li>
            <form action="/logout" method="post">
              <button
                type="submit"
                style="
                  background: none;
                  border: none;
                  color: blue;
                  text-decoration: underline;
                  cursor: pointer;
                "
              >
                Log out
              </button>
            </form>
          </li>
        </ul>
      </nav>
    </header>

    <main>
      <section class="main-header">
        <h2>Welcome, <%=user.firstname %></h2>

        <nav>
          <%if(currentFolderId !== null) {%>

          <a href="/dashboard">Dashboard/</a>
          <% if(breadcrumbs && breadcrumbs.length) {%> <%
          breadcrumbs.forEach((crumb, index) => { %> <% if (index <
          breadcrumbs.length -1) { %>
          <a href="/dashboard?folderId=<%=crumb.id%>"><%= crumb.name%>/</a>
          <% } else {%>
          <span> Current Folder: <%=crumb.name %></span>
          <%}%> <% }) %> <% }%> <% } %>
        </nav>

        <div class="create-controls">
          <form action="/folders" method="post">
            <input
              type="hidden"
              name="parentId"
              value="<%= currentFolderId ||
            ''  %>"
            />
            <input type="text" name="name" required />
            <button type="submit">Create Folder</button>
          </form>

          <form action="/files" method="post" enctype="multipart/form-data">
            <input
              type="hidden"
              name="folderId"
              value="<%=currentFolderId || '' %>"
            />
            <input type="file" name="file" required />
            <button>Upload File</button>
          </form>
        </div>
      </section>
      <section class="items-container">
        <div class="errors">
          <% if (typeof errors !== 'undefined' && errors.length) { %>
          <ul style="color: red">
            <% errors.forEach(e => { %>
            <li><%= e.msg %></li>
            <% }) %>
          </ul>
          <% } %>
        </div>

        <% if(!items || items.length === 0){ %>
        <div class="">
          <h3>You current have no files or folders!</h3>
        </div>
        <%} else {%>
        <table>
          <thead>
            <tr>
              <th>Name</th>
              <th>Size</th>
              <th>Date Created</th>
              <th>Rename</th>
              <th>Download</th>
              <th>Share</th>
              <th>Delete</th>
            </tr>
          </thead>
          <tbody>
            <% items.forEach(item => { %>
            <tr>
              <td>
                <% if (item.type === 'folder') { %>
                <a href="/dashboard?folderId=<%= item.id %>"
                  >üìÅ <%= item.name %></a
                >

                <% } else { %> üìÑ <%= item.name %> <% } %>
              </td>
              <td><%= item.type === 'file' ? fileSize(item.size) : '-' %></td>
              <td><%= item.date.toLocaleString() %></td>
              <td>
                <% if(item.type === 'folder') {%>
                <form
                  action="/folders/<%=item.id%>/rename"
                  method="post"
                  onsubmit="return renamePrompt(this)"
                >
                  <input
                    type="hidden"
                    name="currentFolderId"
                    value="<%=currentFolderId ?? ''%>"
                  />
                  <input type="hidden" name="name" value="" />
                  <button>Rename</button>
                </form>
                <%} else {%>
                <form
                  action="/files/<%=item.id%>/rename"
                  method="post"
                  onsubmit="return renamePrompt(this)"
                >
                  <input
                    type="hidden"
                    name="currentFolderId"
                    value="<%=currentFolderId ?? ''%>"
                  />
                  <input type="hidden" name="name" value="" />
                  <button>Rename</button>
                </form>
                <% }%>
              </td>
              <td>
                <% if (item.type === 'folder') { %>
                <a href="/folders/<%= item.id %>/download">Download</a>
                <% } else { %>
                <a href="/files/<%= item.id %>/download">Download</a>
                <% } %>
              </td>
              <td>
                <form
                  action="/folders/<%=item.id%>/share"
                  method="post"
                  onsubmit="return true"
                >
                  <input
                    type="number"
                    name="durationInHours"
                    min="1"
                    max="720"
                    value="24"
                  />
                  <button>Share</button>
                </form>
              </td>
              <td>
                <% if(item.type === 'folder') {%>
                <form
                  action="/folders/<%=item.id%>/delete"
                  method="post"
                  onsubmit="return confirmDelete('<%= item.name %>')"
                >
                  <button>Delete</button>
                </form>
                <%} else {%>
                <form
                  action="/files/<%=item.id%>/delete"
                  method="post"
                  onsubmit="return confirmDelete('<%= item.name %>')"
                >
                  <input
                    type="hidden"
                    name="currentFolderId"
                    id="<%=currentFolderId ?? ''%>"
                  />
                  <button>Delete</button>
                </form>
                <% }%>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>

        <% }%>
      </section>
    </main>

    <script src="/scripts/dashboardScripts.js"></script>
  </body>
</html>
